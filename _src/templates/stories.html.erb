</head>
<body>

<article id="static-body">
  <header>
    <h1><img src="/imgs/logo.svg" alt="Henge"></h1>
  </header>

  <%- stories.each do |pattern, data| -%>
  <div class="story-source" data-pattern-id="<%= data[:id] %>">
    <h2><a class="pattern-link" href="/circles/<%= pattern %>.html" target="_blank"><%= pattern %></a></h2>
    <ol class="story-line">
    <%- data[:lines].each do |line| -%>
    <li><%= line %></li>
    <%- end -%>
    </ol>
  </div>
  <%- end -%>
</article>

