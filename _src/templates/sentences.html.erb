<body class="sentences">

<div class="container">
  <header class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <a href="/" class="navbar-brand"><svg role="img" style="fill: #9d9d9d; width: 18px; height: 18px; margin-right: 6px;"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/imgs/svg/sprite.svg#icon"></use></svg>Henge</a>
    </div>
  </header>

<article style="margin-top: 100px">

<p>
<%- if type == :circle -%>
 <a class="btn-circle btn btn-default" href="./<%= prev_entry[:pattern] %>.html" role="button"><span class="glyphicon glyphicon-triangle-left" style="margin-top:4px"></span></a>
 <a class="navi-button" href="/circles/<%= pattern %>.html"><img src="https://henge.s3-ap-northeast-1.amazonaws.com/circles/<%= pattern %>.png"></a>
 <a class="btn-circle btn btn-default" href="./<%= next_entry[:pattern] %>.html" role="button"><span class="glyphicon glyphicon-triangle-right" style="margin-top:4px"></span></a>
<%- else -%>
 <a class="navi-button" href="/floors/<%= floornum %>.html">â–¼</a>
<%- end -%>
</p>

<%- if type == :circle -%>
<h2><%= pattern %></h2>
<%- else -%>
<h2>Floor <%= floornum %></h2>
<%- end -%>


<div class="container">
  <%- if images -%>
  <%- 4.times do |i| -%>
  <div class="row">
    <div class="col-md-1">
      <img src="https://henge.s3-ap-northeast-1.amazonaws.com/sentences/<%= images[i] %>" width="80">
    </div>
    <div class="col-md-11">
      <p><%= lines[i] %><br><span class="translate-links">[<a href="https://translate.google.com/?sl=en&tl=ja&text=<%= encoded[i] %>" target="_blank">G</a>|<a href="https://www.deepl.com/translator#en/ja/<%= encoded[i] %>" target="_blank">D</a>]</span></p>
    </div>
  </div>
  <%- end -%>
  <%- else -%>
  <%- 4.times do |i| -%>
  <div class="row">
    <div class="col-md-12">
      <p><%= lines[i] %><br><span class="translate-links">[<a href="https://translate.google.com/?sl=en&tl=ja&text=<%= encoded[i] %>" target="_blank">G</a>|<a href="https://www.deepl.com/translator#en/ja/<%= encoded[i] %>" target="_blank">D</a>]</span></p>
    </div>
  </div>
  <%- end -%>
  <%- end -%>
</div>

</article>

</div>

